% ff-beamer.sty
% 引入tikz包以绘制图形
\usepackage{tikz}

% 定义背景图像
\defbeamertemplate*{background}{custom background}{
  \begin{tikzpicture}[remember picture, overlay]
    \node[outer sep=0] at (current page.center) {\includegraphics[width=\paperwidth,height=\paperheight]{res/background_blue2pink.png}}; % 使用指定的背景图像并居中
  \end{tikzpicture}
}

% 使用自定义背景样式
\setbeamertemplate{background}[custom background]

% 定义标题栏背景
\defbeamertemplate*{headline}{custom title bar}{
  \leavevmode
  \hbox{%
    \begin{tikzpicture}[remember picture, overlay] % 确保标题栏在顶层
      % 绘制白色标题栏底部区域
      \fill[white] (0, 1cm) rectangle (\paperwidth, 0cm);
      
      % 使用蓝到绿再到蓝的渐变图像作为标题栏下边缘装饰
      \node[outer sep=0] at (\paperwidth/2, 0) {\includegraphics[width=\paperwidth]{res/blue2green2blue.png}};
    \end{tikzpicture}
  }
  \vskip -1cm % 调整标题栏高度
}

